<div class="max-w-3xl mx-auto px-4 my-16">
  <div class="flex items-center justify-between pb-6 border-b dark:border-slate-700">
    <h1 class="text-4xl font-extrabold text-slate-900 dark:text-slate-100 tracking-tight"><%=t('views.weights.index.h1_title')%></h1>
    <div class="flex items-center justify-end">
      <%= link_to t('views.weights.index.link_text'), new_weight_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div id="weights" class="divide-y dark:text-slate-700 mb-10">
    <% @weights.each do |weight| %>
      <div class="py-3">
        <%= render weight %>

        <%= link_to t('views.weights.weights'), weight, class: "btn-link inline-block my-3" %>
      </div>
    <% end %>
  </div>
</div>
