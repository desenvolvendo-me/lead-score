<%= form_with(model: weight) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status, [['Active', 'active'], ['Inactive', 'inactive']], {}, { class: "form-input" } %>
  </div>


  <div class="form-group">
    <%= form.label :question_answer, class: "form-label" %>
    <%= form.text_area :question_answer, value: @weight.question_answer.to_json, class: "form-input" %>
  </div>

  <div class="flex items-center justify-between flex-wrap">
    <div class="sm:flex-1 sm:mb-0 mb-6">
      <%= form.submit class: "btn btn-primary" %>
    </div>

    <% if form.object.new_record? %>
      <%= link_to "Cancel", posts_path, class: "btn btn-light" %>
    <% else %>
      <%= link_to "Cancel", post_path(@post), class: "btn btn-light" %>
    <% end %>
  </div>
<% end %>