<%= form_with(model: @weight, local: true) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_field :description, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status, Weight.statuses.keys.map { |status| [t("enums.weight.status.#{status}"), status] }, {}, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :question_answer, class: "form-label" %>
    <%= form.text_field :question_answer, placeholder: 'Digite com esse formato: { "pergunta1" : { "resposta1" : 10, "resposta2" : 5 }}', class: "form-input" %>
  </div>

  <div class="flex items-center justify-between flex-wrap">
    <div class="sm:flex-1 sm:mb-0 mb-6">
      <%= form.submit t('helpers.submit.create_weight'), class: "btn btn-primary" %>
    </div>

    <% if form.object.new_record? %>
      <%= link_to t('actions.cancel'), weights_path, class: "btn btn-light" %>
    <% else %>
      <%= link_to t('actions.cancel'), weight_path(@weight), class: "btn btn-light" %>
    <% end %>
  </div>
<% end %>
