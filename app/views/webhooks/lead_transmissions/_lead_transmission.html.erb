<li class="px-4 py-5 sm:text-base text-sm items-start grid grid-cols-2 sm:grid-cols-12 gap-3 sm:gap-0 hover:bg-slate-50 transition ease-in-out duration-200 dark:hover:bg-slate-800">
  <div class="sm:col-span-3 sm:mb-0 mb-4 col-span-2">
    <div class="flex flex-col items-start space-y-1">
      <p class="text-slate-500 text-sm">URL</p>
      <p class="sm:font-medium text-slate-900 sm:text-base text-lg font-semibold dark:text-slate-200">
        <%= link_to lead_transmission.webhook_url, webhooks_lead_transmission_path(lead_transmission), class: "hover:underline" %>
      </p>
    </div>
  </div>
  <div class="sm:col-span-2 col-span-1">
    <div class="flex flex-col items-start space-y-1">
      <p class="text-sm text-slate-500">Min Score</p>
      <p><%= lead_transmission.min_score_threshold %></p>
    </div>
  </div>
  <div class="sm:col-span-2 col-span-1">
    <div class="flex flex-col items-start space-y-1">
      <p class="text-sm text-slate-500">Max Score</p>
      <p><%= lead_transmission.max_score_threshold %></p>
    </div>
  </div>
  <div class="sm:col-span-2 col-span-1">
    <div class="flex flex-col items-start space-y-1">
      <p class="text-sm text-slate-500">Active</p>
      <p>
        <%= lead_transmission.active ? "Yes" : "No" %>
      </p>
    </div>
  </div>
  <div class="sm:col-span-2 col-span-1">
    <div class="flex flex-col items-start space-y-1">
      <p class="text-sm text-slate-500">Actions</p>
      <div class="flex space-x-2">
        <%= link_to 'Show', webhooks_lead_transmission_path(lead_transmission), class: "text-blue-500 hover:underline" %>
        <%= link_to 'Edit', edit_webhooks_lead_transmission_path(lead_transmission), class: "text-yellow-500 hover:underline" %>
        <%= button_to 'Delete', webhooks_lead_transmission_path(lead_transmission), data: { turbo_method: :delete, turbo_confirm: ('Confirm Delete?') }, method: :delete,  class: 'text-red-500 hover:underline' %>
      </div>
    </div>
  </div>
</li>
